{
  "extends": "@antribute/config/tsconfig/tsconfig.react.json",
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/index.test.ts1"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "blocks": ["./blocks/*"],
      "components": ["./components/*"],
      "config": ["./config/*"],
      "constants": ["./constants/*"],
      "hooks": ["./hooks/*"],
      "mock": ["./mock/*"],
      "storybook-utils": ["./storybook-utils/*"],
      "styles": ["./styles/*"],
      "types": ["./types/*"],
      "utils": ["./utils/*"],
      "helpers": ["./helpers.ts"]
    }
  },
  "typeAcquisition": {
    "enable": true,
    "include": ["react", "@tw-classed/react", "@tw-classed/core"]
  },
  "tsc-alias": {
    "verbose": true
  }
}
