{
  "name": "@antribute/open-source",
  "scripts": {
    "build": "turbo run build",
    "build:apps": "turbo run build --filter=./apps/*",
    "build:packages": "turbo run build --filter=./packages/*",
    "build:servers": "turbo run build --filter=./servers/*",
    "clean": "turbo run clean && rm -r ./node_modules && pnpm i",
    "dev:adk-todo": "turbo run dev --filter=@antribute/example-adk-todo-list...",
    "dev:lp": "turbo run dev --filter=@antribute/landing-page...",
    "dev:ui": "turbo run storybook --filter=@antribute/ui...",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "lint:package-versions": "manypkg check",
    "postinstall": "simple-git-hooks && pnpm run lint:package-versions",
    "style:format": "prettier --ignore-unknown --write .",
    "style:lint": "prettier --ignore-unknown --check .",
    "test": "turbo run test -- run"
  },
  "dependencies": {
    "@manypkg/cli": "^0.19.2",
    "lint-staged": "^13.0.3",
    "prettier": "2.8.7",
    "rimraf": "^4.4.1",
    "simple-git-hooks": "^2.8.1",
    "turbo": "latest",
    "typescript": "^5.0.4"
  },
  "prettier": "./packages/config/prettier/.prettierrc.cjs",
  "private": true,
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*": "pnpm run style:format"
  },
  "manypkg": {
    "ignoredRules": [
      "INTERNAL_MISMATCH"
    ]
  },
  "overrides": {
    "storybook-tailwind-dark-mode": {
      "@storybook/addons": "^7.0.0-beta.21",
      "@storybook/api": "^7.0.0-beta.21",
      "@storybook/components": "^7.0.0-beta.21",
      "@storybook/core-events": "^7.0.0-beta.21",
      "@storybook/theming": "^7.0.0-beta.21",
      "react": "18.2.0"
    }
  }
}
