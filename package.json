{
  "name": "@antribute/open-source",
  "scripts": {
    "build": "bun run --bun turbo run build",
    "build:apps": "bun run --bun turbo run build --filter=./apps/*",
    "build:packages": "bun run --bun turbo run build --filter=./packages/*",
    "build:servers": "bun run --bun turbo run build --filter=./servers/*",
    "clean": "bun run --bun turbo run clean && echo \"‚è≥ Removing node_modules...\" && rm -r ./node_modules",
    "dev:adk-todo": "bun run --bun turbo run dev --filter=@antribute/example-adk-todo-list...",
    "dev:lp": "bun run --bun turbo run dev --filter=@antribute/landing-page...",
    "dev:ui": "bun run --bun turbo run storybook --filter=@antribute/ui...",
    "lint": "bun run --bun turbo run lint",
    "lint:fix": "bun run --bun turbo run lint -- --fix",
    "lint:package-versions": "bun run --bun manypkg check",
    "postinstall": "bun run --bun simple-git-hooks && pnpm run lint:package-versions",
    "style:format": "bun run --bun prettier --ignore-unknown --write .",
    "style:lint": "bun run --bun prettier --ignore-unknown --check .",
    "reset": "bun run clean && pnpm i",
    "reset:hard": "bun run clean && rm pnpm-lock.yaml && pnpm i",
    "test": "bun run --bun turbo run test -- run",
    "kill-port": "bun x kill-port"
  },
  "dependencies": {
    "@manypkg/cli": "^0.19.2",
    "lint-staged": "^13.0.3",
    "prettier": "2.8.7",
    "rimraf": "^4.4.1",
    "simple-git-hooks": "^2.8.1",
    "turbo": "latest",
    "typescript": "^5.0.4"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prettier": "./packages/config/prettier/.prettierrc.cjs",
  "private": true,
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*": "pnpm run style:format"
  },
  "manypkg": {
    "ignoredRules": [
      "INTERNAL_MISMATCH"
    ]
  },
  "overrides": {
    "storybook-tailwind-dark-mode": {
      "@storybook/addons": "^7.0.0-beta.21",
      "@storybook/api": "^7.0.0-beta.21",
      "@storybook/components": "^7.0.0-beta.21",
      "@storybook/core-events": "^7.0.0-beta.21",
      "@storybook/theming": "^7.0.0-beta.21",
      "react": "18.2.0"
    }
  }
}
