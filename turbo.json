{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "cache": true,
      "outputs": [".next/**", "dist/**"]
    },
    "build:package": {
      "cache": true,
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build:package"]
    },
    "format": {
      "cache": false
    },
    "lint": {
      "cache": true,
      "dependsOn": ["^build:package"],
      "outputs": [".eslintcache"]
    },
    "reset": {
      "cache": false
    },
    "test": {
      "cache": true,
      "dependsOn": ["^build:package"],
      "outputs": ["coverage/**", "test-results/**"]
    }
  }
}
