  "version": "0.2.0",
  "configurations": [
    {
      "name": "Storybook Debug",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun run storybook-react",
      "internalConsoleOptions": "openOnFirstSessionStart",
      "serverReadyAction": {
        "pattern": "Local:.+(https?://[^:]+:[0-9]+)",
        "uriFormat": "%s",
        "action": "debugWithChrome",
        "webRoot": "${workspaceFolder}/packages/zephyr-react"
      }
    },
    {
      "name": "Arktype Test Playground",
      "type": "node-terminal",
      "command": "pnpm --filter=@feature-type/cli arktype-test-playground",
      "request": "launch",
      "cwd": "${workspaceFolder}"
    }
